    <Label fx:id="availablePiecesSetup" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx"></Label>

    <Label fx:id="pieceTypeLabelSetup" text="Piece type" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx"></Label>
    <TextField fx:id="pieceTypeInputSetup" />

    <!-- Place for the from row input and its label -->
    <Label fx:id="rowLabelSetup" text="Row" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx"></Label>
    <TextField fx:id="rowInputSetup" />

    <!-- Place for the from col input and its label -->
    <Label fx:id="colLabelSetup" text="Column" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx"></Label>
